#!/bin/bash

APP_NAME="Snowflake UI"
APP_DIR="/Applications/Snowflake UI.app"
ZIP_URL="https://github.com/alexkkork/install/releases/download/snowflake/Snowflake.UI.zip"

echo ""
echo "â„ï¸  ================================================="
echo "â„ï¸   Installing $APP_NAME"
echo "â„ï¸   by Dayte"
echo "â„ï¸  ================================================="
echo ""

sleep 1
echo "ğŸ§¼ Checking for existing installations..."
if [ -d "$APP_DIR" ]; then
    echo "ğŸ§¨ Existing installation found. Removing..."
    rm -rf "$APP_DIR"
fi

# Remove any leftovers by name (just in case)
echo "ğŸ§¹ Cleaning up any old versions..."
find /Applications -type d -name "*Snowflake UI*" -exec rm -rf {} +

# Create a temp folder
TEMP_DIR=$(mktemp -d)
echo "ğŸ“ Created temporary directory: $TEMP_DIR"

# Download the zip
echo "ğŸ“¦ Downloading $APP_NAME from GitHub Releases..."
curl -L -o "$TEMP_DIR/app.zip" "$ZIP_URL"

# Check download success
if [ $? -ne 0 ]; then
    echo "âŒ Download failed. Exiting."
    exit 1
fi

echo "ğŸ“¦ Unzipping archive..."
unzip -q "$TEMP_DIR/app.zip" -d "$TEMP_DIR"

# Find .app and move it
FOUND_APP=$(find "$TEMP_DIR" -name "*.app" -maxdepth 2 | head -n 1)
if [ -z "$FOUND_APP" ]; then
    echo "âŒ No .app found inside the zip. Exiting."
    exit 1
fi

echo "ğŸšš Moving $APP_NAME to /Applications..."
mv -f "$FOUND_APP" "/Applications/"

# Launch the app
echo "ğŸš€ Launching $APP_NAME..."
open "/Applications/Snowflake UI.app"

# Cleanup
echo "ğŸ§½ Cleaning up..."
rm -rf "$TEMP_DIR"

echo ""
echo "âœ… $APP_NAME installed and launched successfully!"
echo "â„ï¸  by Dayte"

#!/bin/bash

set -e

# Colors
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
BLUE='\033[1;34m'
CYAN='\033[1;36m'
BOLD='\033[1m'
NC='\033[0m'

# Variables
ZIP_URL="https://github.com/alexkkork/install/raw/refs/heads/main/7sploit.zip"
ZIP_NAME="7sploit.zip"
APP_NAME="7sploit.app"
APP_PATH="/Applications/$APP_NAME"
TMP_DIR="/tmp/7sploit_installer"

# Functions
info()    { echo -e "${CYAN}ğŸ”§ $1${NC}"; }
success() { echo -e "${GREEN}âœ… $1${NC}"; }
warn()    { echo -e "${YELLOW}âš ï¸  $1${NC}"; }
error()   { echo -e "${RED}âŒ $1${NC}"; }

# Banner
clear
echo -e "${BLUE}${BOLD}"
echo "â–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ•—â–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ•—â–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ•— â–ˆâ–ˆâ•—      â–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ•— â–ˆâ–ˆâ•—â–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ•—"
echo "â–ˆâ–ˆâ•”â•â•â•â•â•â–ˆâ–ˆâ•”â•â•â•â•â•â–ˆâ–ˆâ•”â•â•â–ˆâ–ˆâ•—â–ˆâ–ˆâ•‘     â–ˆâ–ˆâ•”â•â•â•â–ˆâ–ˆâ•—â–ˆâ–ˆâ•‘â•šâ•â•â–ˆâ–ˆâ•”â•â•â•"
echo "â–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ•—â–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ•—  â–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ•”â•â–ˆâ–ˆâ•‘     â–ˆâ–ˆâ•‘   â–ˆâ–ˆâ•‘â–ˆâ–ˆâ•‘   â–ˆâ–ˆâ•‘   "
echo "â•šâ•â•â•â•â–ˆâ–ˆâ•‘â–ˆâ–ˆâ•”â•â•â•  â–ˆâ–ˆâ•”â•â•â•â• â–ˆâ–ˆâ•‘     â–ˆâ–ˆâ•‘   â–ˆâ–ˆâ•‘â–ˆâ–ˆâ•‘   â–ˆâ–ˆâ•‘   "
echo "â–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ•‘â–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ•—â–ˆâ–ˆâ•‘     â–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ•—â•šâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ•”â•â–ˆâ–ˆâ•‘   â–ˆâ–ˆâ•‘   "
echo "â•šâ•â•â•â•â•â•â•â•šâ•â•â•â•â•â•â•â•šâ•â•     â•šâ•â•â•â•â•â•â• â•šâ•â•â•â•â•â• â•šâ•â•   â•šâ•â•   "
echo -e "${NC}${BOLD}"
echo -e "                by Alex and 7Sleeps"
echo -e "${NC}\n"

# Check if already installed
if [ -d "$APP_PATH" ]; then
    success "7Sploit is already installed."
    info "Launching 7Sploit..."
    open -a "$APP_PATH"
    exit 0
fi

# Begin installation
info "7Sploit not found. Proceeding with installation..."
mkdir -p "$TMP_DIR"
cd "$TMP_DIR"

info "Downloading 7Sploit from GitHub..."
curl -L --progress-bar "$ZIP_URL" -o "$ZIP_NAME"

info "Unpacking 7Sploit..."
unzip -q "$ZIP_NAME"

if [ ! -d "$APP_NAME" ]; then
    error "$APP_NAME not found after unzipping. Exiting."
    exit 1
fi

info "Installing to /Applications..."
sudo mv -f "$APP_NAME" "$APP_PATH"

info "Cleaning up temporary files..."
rm -rf "$TMP_DIR"

info "Launching 7Sploit..."
open -a "$APP_PATH"

success "ğŸ‰ 7Sploit has been successfully installed and launched!"

#!/bin/bash

APP_NAME="7sploit.app"
APP_PATH="/Applications/$APP_NAME"
ZIP_URL="https://github.com/alexkkork/install/raw/refs/heads/main/7sploit.zip"
TMP_DIR=$(mktemp -d)
ZIP_FILE="$TMP_DIR/7sploit.zip"

# Fancy title
clear
echo ""
echo "โโโโโโโโโโโโโโโโโโโโโโโ  โโโโโโโ โโโ      โโโโโโโ โโโโโโโโโโโโ"
echo "โโโโโโโโโโโโโโโโโโโโโโโโโโโโโโโโโโโโ     โโโโโโโโโโโโโโโโโโโโโ"
echo "  โโโโโ โโโโโโ  โโโโโโโโโโโ   โโโโโโ     โโโ   โโโโโโ   โโโ   "
echo " โโโโโ  โโโโโโ  โโโโโโโโโโโ   โโโโโโ     โโโ   โโโโโโ   โโโ   "
echo "โโโโโโโโโโโโโโโโโโโ  โโโโโโโโโโโโโโโโโโโโโโโโโโโโโโโโ   โโโ   "
echo "โโโโโโโโโโโโโโโโโโโ  โโโ โโโโโโโ โโโโโโโโ โโโโโโโ โโโ   โโโ   "
echo "             ๐ By Alex and 7Sleeps | Installing $APP_NAME"
echo ""

# Step 1: Remove existing apps
echo "๐งน Checking for old installations..."
FOUND=false
for path in "$APP_PATH" "./$APP_NAME"; do
    if [ -d "$path" ]; then
        echo "๐๏ธ  Removing old app at: $path"
        rm -rf "$path"
        FOUND=true
    fi
done
$FOUND || echo "โ No previous version found."

# Step 2: Download
echo "โฌ๏ธ  Downloading $APP_NAME..."
curl -L "$ZIP_URL" -o "$ZIP_FILE"

# Step 3: Unzip
echo "๐ฆ Unzipping..."
unzip -o -q "$ZIP_FILE" -d "$TMP_DIR"

# Step 4: Find and move app to /Applications
EXTRACTED_APP=$(find "$TMP_DIR" -name "$APP_NAME" -type d | head -n 1)
if [ -d "$EXTRACTED_APP" ]; then
    echo "๐ Installing to /Applications..."
    mv "$EXTRACTED_APP" "/Applications/"
else
    echo "โ Error: $APP_NAME not found after extraction."
    exit 1
fi

# Step 5: Launch
echo "๐ Launching $APP_NAME..."
open -a "/Applications/$APP_NAME"

# Done
echo ""
echo "โ 7Sploit successfully installed and launched!"
